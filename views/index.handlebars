<div class="container">
    <div class="row">
        <div class="col s12 m4 l2">
            <h2>Burgers to eat!</h2>

            <ul>
                {{#each burgers}} 
                    {{#unless devoured}} 
                        {{> burgers/burger-buttons devoured=false}} 
                    {{/unless}} 
                {{/each}}
            </ul>
        </div>

        <div class="col s12 m4 l8">
            <img src="/assets/img/bigger-burger.svg">
             {{!-- burger provided by Freepik--}}
        </div>

        <div class="col s12 m4 l8">
            <h2>Burgers you've eaten!</h2>

            <ul>
                {{#each burgers}} 
                    {{#if devoured}} 
                        {{> burgers/burger-buttons devoured=true}} 
                    {{/if}} 
                {{/each}}
            </ul>
        </div>

    </div>

    <div class="row">
        <form class="col s12" id="burgerForm">
            <div class="row">
                <div class="input-field col s12">
                    <textarea id="burgerTextArea" class="materialize-textarea"></textarea>
                    <label for="burgerTextArea">Add a Burger!</label>
                    <button type="submit">Submit your Burger <img src="/assets/img/fastfood.svg"></button>
                </div>
            </div>
        </form>
    </div>
</div>