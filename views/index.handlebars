<div class="container">
    <div class="row">
        <div class="col s12 m4 l3 col-pad-top">

            {{!-- <ul class="collection"> --}}
            <ul class="collection with-header">
                <li class="collection-header center-align"><h6>Burgers to eat!</h6></li>
                {{#each burgers}} 
                    {{#unless devoured}} 
                        {{> burgers/burger-buttons devoured=false}} 
                    {{/unless}} 
                {{/each}}
            </ul>
        </div>

        <div class="col s12 m4 l6 img-pad-top">
            <img src="/assets/img/smaller-burger.svg">
            <h3 class="center-align">Eat-Dat-Burger</h3>
        </div>

        <div class="col s12 m4 l3 col-pad-top">

            {{!-- <ul class="collection"> --}}
            <ul class="collection with-header">
                <li class="collection-header center-align"><h6>Burgers you've eaten!</h6></li>
                {{#each burgers}} 
                    {{#if devoured}} 
                        {{> burgers/burger-buttons devoured=true}} 
                    {{/if}} 
                {{/each}}
            </ul>
        </div>

    </div>

<div class="row">
        <form class="col s12 center-align" id="burgerForm">
            <div class="row">
                <div class="input-field col s12">
                    <input placeholder="Add A Burger!" id="newBurgerName" type="text" class="black-text">
                </div>
                <button class="btn waves-effect waves-light" type="submit" name="action">Submit your Burger <img src="/assets/img/fastfood.svg"></button>
            </div>
        </form>
        <p class="center-align">Enter the name of a burger you'd like to eat above. Then hit submit.</p>
    </div>
</div>