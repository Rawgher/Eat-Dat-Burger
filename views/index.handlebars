<div class="container">
    <div class="row wrapper">
        <div class="col s12 m4 l3 col-pad-top left" id="refresh-this">

            <ul class="collection with-header center-align" id="new-burgers">
                <li class="collection-header center-align">
                    <h6 class="bold">Burgers to eat!</h6>
                </li>
                {{#each burgers}} 
                    {{#unless devoured}} 
                        <li class="collection-item">
                            {{burger_name}}
                            <button class="btn waves-effect waves-light switch-devour" type="submit" name="action" data-id="{{id}}" data-eaten="{{devoured}}">
		                    Eat it!
	                        </button>
                        </li>
                    {{/unless}} 
                {{/each}}
            </ul>
        </div>

        <div class="col s12 m4 l6 img-pad-top center">
            <img src="/assets/img/smaller-burger.svg">
            <h3 class="center-align">Eat-Dat-Burger</h3>
        </div>

        <div class="col s12 m4 l3 col-pad-top right center-align">

            <ul class="collection with-header" id="eaten-burgers">
                <li class="collection-header center-align">
                    <h6 class="bold">Burgers you've eaten!</h6>
                </li>
                {{#each burgers}} 
                    {{#if devoured}} 
                        <li class="collection-item">
                        {{burger_name}}
                        <button class="btn waves-effect waves-light delete-burger" data-id="{{id}}">
		                    Hated It!
	                        </button>
                        </li>
                    {{/if}} 
                {{/each}}
            </ul>
        </div>

    </div>

<div class="row">
        <form class="col s12 center-align" id="burgerForm">
            <div class="row">
                <div class="input-field col s12" id="burger-input">
                    <input placeholder="Add A Burger!" id="newBurgerName" type="text" class="black-text">
                </div>
                <button class="btn waves-effect waves-light" type="submit" name="action">Submit your Burger <img src="/assets/img/fastfood-white.svg"></button>
            </div>
        </form>
        <p class="center-align">Enter the name of a burger you'd like to eat above. Then hit submit!</p>
    </div>
</div>